{
  "name": "Hello Extensions",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/hello_extensions.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://*/"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/content.js",
        "scripts/background.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
